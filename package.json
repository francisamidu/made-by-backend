{
  "name": "health-terms-backend",
  "version": "0.0.0",
  "description": "Health terms backend built with Typescript, Express, Postgresql and Drizzle",
  "type": "module",
  "engines": {
    "node": ">= 22.11 < 23"
  },
  "devDependencies": {
    "@eslint/js": "~9.17",
    "@types/cors": "~2.8.17",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/eslint__js": "~8.42",
    "@types/express": "~5.0.0",
    "@types/node": "~20",
    "@types/pg": "^8.11.11",
    "@types/swagger-jsdoc": "~6.0.4",
    "@types/swagger-ui-express": "~4.1.7",
    "@typescript-eslint/parser": "~8.19",
    "@vitest/coverage-v8": "~2.1",
    "@vitest/eslint-plugin": "~1.1",
    "drizzle-kit": "^0.30.4",
    "eslint": "~9.17",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.14",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.0",
    "bun": "^4.19.2",
    "typescript": "~5.7",
    "typescript-eslint": "~8.19",
    "vitest": "~2.1"
  },
  "scripts": {
    "db:ui": "bun drizzle-kit studio --port 3000 --verbose",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:push": "bun drizzle-kit push",
    "db:seed":"bun src/db/seeder.ts",
    "start": "node dist/app.js",
    "dev": "bun --watch src/app.ts",
    "build": "tsc && tsc-alias",
    "lint": "eslint .",
    "test": "vitest run unit --config __tests__/vitest.config.ts",
    "test:coverage": "vitest run unit --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test:watch": "vitest unit"
  },
  "author": "Francis Amidu",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.39.1",
    "express": "^4.21.2",
    "express-list-endpoints": "^7.1.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsc-alias": "^1.8.10",
    "tsc-watch": "^6.2.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "~2.8",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "volta": {
    "node": "22.12.0"
  }
}
